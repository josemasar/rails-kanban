<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="text-lg font-bold text-4xl">Tasks</h1>
    <%= link_to 'New task', new_task_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="tasks" class="grid grid-cols3">
    <div class="col-start-1">
    <%= render @tasks.where(:status => 'Work Queue') %>
    </div>
    <div class="col-start-2">
    <%= render @tasks.where(:status => 'In Progress')  %>
    </div><div class="col-start-3">
    <%= render @tasks.where(:status => 'Completed')  %>
    </div>
  </div>
</div>
