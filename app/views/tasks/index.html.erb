<div class="w-full h-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mb-4 -mt-16">
    <h1 class="text-lg font-bold text-4xl">Kanban Tasks</h1>
    <%= link_to 'New task', new_task_path, class: "rounded-lg py-3 px-5 bg-gray-800 text-white block font-medium" %>
  </div>

  <div id="tasks" class="grid grid-cols3 gap-4">
    <div class="border rounded-md bg-gray-100">
      <p class="font-semibold text-center">Work Queue</p>
    </div>    
    <div class="border rounded-md bg-gray-200">
      <p class="font-semibold text-center">In Progress</p>
    </div>
    <div class="border rounded-md bg-gray-300">
      <p class="font-semibold text-center">Completed</p>
    </div>   
    <div class="col-start-1 gap-4 p-2 border rounded-lg flex flex-row flex-wrap">
      <%= render @tasks.where(:status => 'Work Queue') %>
    </div>
    <div class="col-start-2 gap-4 p-2 border rounded-lg flex flex-row flex-wrap">
      <%= render @tasks.where(:status => 'In Progress')  %>
    </div>
    <div class="col-start-3 p-2 gap-4 border rounded-lg flex flex-row flex-wrap">
      <%= render @tasks.where(:status => 'Completed')  %>
    </div>
  </div>
</div>
